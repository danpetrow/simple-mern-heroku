{
  "name": "simple-mern-heroku",
  "version": "1.0.0",
  "description": "a boilerplate for deploying a mern app to heroku",
  "main": "server.js",
  "scripts": {
    "test": "nodemon server.js",
    "start": "node server.js",
    "client": "npm start --prefix client",
    "build": "cd client && npm install && npm run build",
    "dev": "concurrently \"nodemon server.js\" \"npm run client\""
  },
  "author": "Dan Petrow",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "express-session": "^1.17.2",
    "express-validator": "^6.14.0",
    "jsonwebtoken": "^8.5.1",
    "mysql": "^2.18.1",
    "nodemon": "^2.0.16"
  },
  "devDependencies": {
    "concurrently": "^7.2.0"
  }
}
